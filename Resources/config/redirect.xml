<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zenstruck.redirect_listener.class">Zenstruck\Bundle\RedirectBundle\EventListener\ExceptionListener</parameter>
    </parameters>

    <services>
        <service id="zenstruck.redirect_listener" class="%zenstruck.redirect_listener.class%">
          <tag name="kernel.listener" event="core.exception" method="onCoreException" />

          <argument type="service" id="doctrine.orm.entity_manager" />
          <argument /> <!-- log statitics -->
          <argument /> <!-- log 404 errors -->
        </service>
    </services>
</container>

