<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zenstruck_redirect.redirect_manager.class">Zenstruck\RedirectBundle\Model\RedirectManager</parameter>
    </parameters>

    <services>
        <service id="zenstruck_redirect.redirect_manager" class="%zenstruck_redirect.redirect_manager.class%" public="false">
            <argument>%zenstruck_redirect.redirect_class%</argument>
            <argument type="service" id="zenstruck_redirect.entity_manager" />
        </service>

        <service id="zenstruck_redirect.entity_manager" factory-service="doctrine" factory-method="getManager" class="Doctrine\ORM\EntityManager" public="false">
            <argument>%zenstruck_redirect.model_manager_name%</argument>
        </service>
    </services>
</container>
